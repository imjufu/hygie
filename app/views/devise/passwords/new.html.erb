<div class="sm:w-2/6 sm:mx-auto">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h2 class="title"><%= t('.forgot_your_password') %></h2>
    <%= render 'shared/errors', errors: resource.errors[:base] %>
    <div class="mt-10 grid grid-cols-1 gap-x-6 sm:gap-y-6 sm:grid-cols-6">
      <div class="sm:col-span-6">
        <%= field_with_error(resource, :email) do %>
          <%= f.label :email %>
          <div class="mt-2">
            <%= f.email_field :email, class: 'block w-full', autofocus: true, autocomplete: "email" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="mt-6 flex flex-col items-center gap-y-8">
      <div>
        <%= f.submit t('.send_me_reset_password_instructions') %>
      </div>
      <div class="flex flex-col text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>

