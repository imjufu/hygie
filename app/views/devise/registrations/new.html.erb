<div class="sm:w-2/6 sm:mx-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2 class="title"><%= t('.sign_up') %></h2>
    <%= render 'shared/errors', errors: resource.errors[:base] %>
    <div class="mt-10 grid grid-cols-1 gap-x-6 sm:gap-y-6 sm:grid-cols-6">
      <div class="sm:col-span-3">
        <%= field_with_error(resource, :first_name) do %>
        <%= f.label :first_name %>
        <div class="mt-2">
          <%= f.text_field :first_name, class: 'block w-full', autofocus: true %>
        </div>
        <% end %>
      </div>
      <div class="sm:col-span-3">
        <%= field_with_error(resource, :last_name) do %>
        <%= f.label :last_name %>
        <div class="mt-2">
          <%= f.text_field :last_name, class: 'block w-full' %>
        </div>
        <% end %>
      </div>
      <div class="sm:col-span-6">
        <%= field_with_error(resource, :email) do %>
        <%= f.label :email %>
        <div class="mt-2">
          <%= f.email_field :email, class: 'block w-full', autocomplete: "email" %>
        </div>
        <% end %>
      </div>
      <div class="sm:col-span-3">
        <%= field_with_error(resource, :password) do %>
        <%= f.label :password %>
        <div class="mt-2">
          <%= f.password_field :password, class: 'block w-full', autocomplete: "new-password" %>
        </div>
        <% if @minimum_password_length %>
        <p class="text-sm leading-6 text-gray-600">
          <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
        </p>
        <% end %>
        <% end %>
      </div>
      <div class="sm:col-span-3">
        <%= field_with_error(resource, :password_confirmation) do %>
        <%= f.label :password_confirmation %>
        <div class="mt-2">
          <%= f.password_field :password_confirmation, class: 'block w-full', autocomplete: "new-password" %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="mt-6 flex flex-col items-center gap-y-8">
      <%= f.submit t('.sign_up'), class: 'block w-full' %>
      <div class="flex flex-col text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
