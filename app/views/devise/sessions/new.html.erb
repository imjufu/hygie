<div class="sm:w-2/6 sm:mx-auto">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="title"><%= t('.sign_in') %></h2>
    <%= render 'shared/errors', errors: resource.errors[:base] %>
    <div class="mt-10 grid grid-cols-1 gap-x-6 sm:gap-y-6 sm:grid-cols-6">
      <div class="sm:col-span-6">
        <%= field_with_error(resource, :email) do %>
          <%= f.label :email %>
          <div class="mt-2">
            <%= f.email_field :email, class: 'block w-full', autofocus: true, autocomplete: "email" %>
          </div>
        <% end %>
      </div>
      <div class="sm:col-span-6">
        <%= field_with_error(resource, :password) do %>
          <%= f.label :password %>
          <div class="mt-2">
            <%= f.password_field :password, class: 'block w-full', autocomplete: "current-password" %>
          </div>
        <% end %>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="sm:col-span-6">
      <%= field_with_error(resource, :password) do %>
        <div class="flex items-center gap-x-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'block leading-6' %>
        </div>
      <% end %>
      </div>
      <% end %>
    </div>
    <div class="mt-6 flex flex-col items-center gap-y-8">
      <%= f.submit t('.sign_in'), class: 'block w-full' %>
      <div class="flex flex-col text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
