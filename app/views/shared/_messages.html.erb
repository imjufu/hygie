<% if notice %>
<div class="flex p-3 rounded-md text-green-700 bg-green-50" role="alert">
  <div class="shrink-0">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="w-5 h-5 text-green-400"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd"></path></svg>
  </div>
  <div class="ml-3 leading-5 text-sm">
    <%= notice %>
  </div>
</div>
<% end %>

<% if alert %>
<div class="flex p-3 rounded-md text-red-700 bg-red-50" role="alert">
  <div class="shrink-0">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="w-5 h-5 text-red-400"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd"></path></svg>
  </div>
  <div class="ml-3 leading-5 text-sm">
    <h3 class="font-medium text-red-800"><%= t('errors.messages.saving_failed', count: 1) %></h3>
    <div><%= alert %></div>
  </div>
</div>
<% end %>
