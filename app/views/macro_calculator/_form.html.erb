<%= render 'shared/errors', errors: macro_calculator.errors[:base] %>
<%= form_with model: macro_calculator, url: macro_calculator_path, method: :post do |form| %>
  <%= field_with_error(macro_calculator, :gender) do %>
    <%= form.label :gender %>
    <% CalorieCalculator::GENDERS.keys.each do |gender| %>
    <%= form.radio_button :gender, gender %>
    <%= form.label "gender_#{gender}" %>
    <% end %>
  <% end %>
  <%= field_with_error(macro_calculator, :age) do %>
    <%= form.label :age %>
    <%= form.text_field :age %>
  <% end %>
  <%= field_with_error(macro_calculator, :height) do %>
    <%= form.label :height %>
    <%= form.text_field :height %>
  <% end %>
  <%= field_with_error(macro_calculator, :weight) do %>
    <%= form.label :weight %>
    <%= form.text_field :weight %>
  <% end %>
  <%= field_with_error(macro_calculator, :activity) do %>
    <%= form.label :activity %>
    <% CalorieCalculator::ACTIVITIES.keys.each do |activity| %>
    <%= form.radio_button :activity, activity %>
    <%= form.label "activity_#{activity}" %>
    <%= t("activities.#{activity}_description_html") %>
    <% end %>
  <% end %>
  <%= form.submit t("actions.calculate") %>
<% end %>
